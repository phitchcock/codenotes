<%= render partial: 'shared/errors', locals: {obj: @gem_comment} %>
<%= form_for(gem_comment) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', rows: 15 %>
  </div>
  <div class="form-group">
    <%= f.label :code_sample %>
    <%= f.text_area :code_sample, class: 'form-control', rows: 15 %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>