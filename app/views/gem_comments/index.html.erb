<div id="guide">
  <h1 class="logo"><a href="#">Gems</a></h1>
  <%= render partial: 'shared/nav' %>
</div>
<div id="api-docs">
  <div id="methods">
    <div class="languages">
      <a class="language selected" data-lang="ruby" href="#">Ruby</a>
      <%= link_to 'Note', new_note_path, class: "language selected" %>
      <%= link_to 'Gem', new_gem_comment_path, class: "language selected" %>
      <%= link_to 'Project', new_project_path, class: "language selected" %>
    </div>

    <% @gem_comments.each do |comment| %>
    <div class="method">
      <div class="method-section clearfix">
        <div class="method-description">
          <h3><%= link_to comment.name, comment %><small> [<%= link_to 'edit', edit_gem_comment_path(comment) %>]</small></h3>
          <p><%= markdown comment.description %></p>
        </div>
        <div class="method-example">
          <pre>
          <code class="ruby">
            <%= comment.code_sample %>
          </code>
          </pre>
        </div>
      </div>
    </div>
    <% end %>

  </div>
  <%= will_paginate @gem_comments, renderer: BootstrapPagination::Rails %>
</div>
