<div id="page-wrapper">
  <div class="row">
    <h3>Gems</h3>
    <hr>
    <% @gem_comments.each do |gem| %>
    <div class="col-md-6">
      <h3><%= link_to gem.name, gem %> <small>[<%= link_to 'edit', edit_gem_comment_path(gem) %>]</small></h3>
      <p><%= markdown gem.description %></p>
    </div>
    <div class="col-md-6">
      <pre>
        <code>
          <%= gem.code_sample %>
        </code>
      </pre>
    </div>
    <% end %>
  </div>
  <%= will_paginate @gem_comments, renderer: BootstrapPagination::Rails %>
</div>