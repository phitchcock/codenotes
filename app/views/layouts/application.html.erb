<!DOCTYPE html>
<html>
<head>
  <title>RailsNotes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-default">
    <div class="container">
      <div class="nav-header">
        <%= link_to 'Rails Notes', root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'New Note', new_note_path %></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">

    <% if flash[:notice] %>
    <div class="alert alert-info alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Good Stuff Just Happened!</strong> <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Check Yourself!</strong> <%= flash[:alert] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Oh Shit!</strong> <%= flash[:alert] %>
    </div>
  <% end %>

    <%= yield %>

  </div>


</body>
</html>
